@model Ddi.Registry.Web.Models.SearchModel
           
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    
	<h3>Search the Registry</h3>
	@Html.ValidationSummary(true)

    @Html.TextBoxFor(model => model.Term, new { Class="searchBox", autofocus = "true", placeholder = "Enter an agency identifier" } )
    @Html.ValidationMessageFor(model => model.Term)

    <input type="submit" value="Search" />
}

