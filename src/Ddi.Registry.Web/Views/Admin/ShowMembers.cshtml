@using Ddi.Registry.Data
@model List<ApplicationUser>
@{
	ViewData["Title"] = "Index";
}
<h2>
	Users</h2>
@Html.ValidationSummary()
<p>
	@Html.ActionLink("Create User", "Register", "Account")
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Organization
            </th>
            <th>
                Email
            </th>
            <th></th>
            <!--<th>
        Last Login
    </th>
    <th>
        Comment
    </th>-->
        </tr>
    </thead>
    <tbody>
        @foreach (ApplicationUser item in Model)
        {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Organization
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @Html.ActionLink("Impersonate User", "ImpersonateUser", new { id = item.Id })
            </td>
        </tr>
        }
    </tbody>
</table>
