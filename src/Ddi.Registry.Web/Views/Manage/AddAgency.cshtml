@using Ddi.Registry.Web.Services
@model Ddi.Registry.Web.Models.AgencyModel

@{
    ViewBag.Title = "Add an Agency";
}

<h2>Add Agency</h2>




<p>
    Use this form to request an agency identifier. The agency name should be in the form [country code] dot [name].
    For example: <strong>us.agencyname</strong>
</p>



<form asp-controller="Manage" asp-action="AddAgency" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="AgencyId"></label>
        <p>@Html.DescriptionFor(m => m.AgencyId)</p>
        <input asp-for="AgencyId" class="form-control" />
        <span asp-validation-for="AgencyId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Label"></label>
        <p>@Html.DescriptionFor(m => m.Label)</p>
        <input asp-for="Label" class="form-control" />
        <span asp-validation-for="Label" class="text-danger"></span>
    </div>

    

    <div class="form-group">
        <label asp-for="AdminContactId"></label>
        <p>@Html.DescriptionFor(m => m.AdminContactId)</p>
        <p>Select the Admin contact from the list, <b>or</b> enter their email address.</p>
        <select asp-for="AdminContactId" asp-items="@(new SelectList(ViewBag.People, "Id", "Email"," "))" class="form-control">
            <option value="">--- None or Other ---</option>
        </select>
        <input asp-for="AdminContactEmail" class="form-control" placeholder="or enter an email address" />
        <span asp-validation-for="AdminContactId" class="text-danger"></span>
    </div>

    

    <div class="form-group">
        <label asp-for="TechnicalContactId"></label>
        <p>@Html.DescriptionFor(m => m.TechnicalContactId)</p>
        <p>Select the Technical contact from the list, <b>or</b> enter their email address.</p>
        <select asp-for="TechnicalContactId" asp-items="@(new SelectList(ViewBag.People, "Id", "Email"," "))" class="form-control">
            <option value="">--- None or Other ---</option>
        </select>
        <input asp-for="TechnicalContactEmail" class="form-control" placeholder="or enter an email address" />
        <span asp-validation-for="TechnicalContactId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>


</form>


<div>
    @Html.ActionLink("Back to Management Page", "Index")
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}