@model List<Ddi.Registry.Data.Agency>

@{
    ViewBag.Title = "Agency List";
}

<h2>Agency Search Results</h2>

@if (Model.Count == 0)
{
    <h2>No Results Found</h2>
}
else
{

<table class="table table-striped">
    <thead>
        <tr>
            <th>Agency Name</th>
            <th>Label</th>
            <th>Date Approved</th>
            <th>Last Modified</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.AgencyId, "Index", new { agencyName = item.AgencyId })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Label)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateApproved)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastModified)
                </td>

            </tr>
        }
    </tbody>
</table>

}